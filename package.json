{
  "name": "page-summarizer-extension",
  "description": "AI-powered browser extension that summarizes web pages using OpenAI",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "author": "Jonathan Yang",
  "homepage": "https://github.com/jonathanyangg/summarizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathanyangg/summarizer.git"
  },
  "bugs": {
    "url": "https://github.com/jonathanyangg/summarizer"
  },
